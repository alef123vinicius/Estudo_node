<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %> 
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <a href="/"><button class="btn btn-secondary">Retornar</button></a>
        <hr>
        <form method="POST" action="/salvarresposta">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-dark">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <div class="card">
                <div class="card-body">
                    <h3><p><%= resposta.corpo %></p></h3>
                </div>
            </div>
            <br>
        <% }) %>
    </div>
</body>

<%- include('partials/header.ejs') %>