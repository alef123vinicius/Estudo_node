<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %> 
    <div class="container">
        <hr>
        <h1> Perguntas </h1>
        <hr>
        <% perguntas.forEach(pergunta => { %>

            <div class="card">
                <div class="card-body">
                    <h3><p><%= pergunta.titulo %></p></h3>
                    <h5><p><%= pergunta.descricao %></p></h5>
                </div>
                <div class="card-footer">
                    <a href="./pergunta/<%=pergunta.id%>"><button class="btn btn-dark">Responder</button></a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include('partials/footer.ejs') %> 